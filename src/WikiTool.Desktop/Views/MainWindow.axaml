<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:WikiTool.Desktop.ViewModels"
        xmlns:views="using:WikiTool.Desktop.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
        x:Class="WikiTool.Desktop.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="WikiTool - Wiki Browser"
        Width="1200"
        Height="800"
        MinWidth="900"
        MinHeight="600">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <DockPanel>
        <!-- Tab Bar Area -->
        <Grid DockPanel.Dock="Top" ColumnDefinitions="*,Auto">
            <!-- Tab Control for Multiple Wikis -->
            <TabControl Grid.Column="0"
                        ItemsSource="{Binding WikiTabs}"
                        SelectedItem="{Binding SelectedTab}"
                        Padding="0">
                <TabControl.ItemTemplate>
                    <DataTemplate x:DataType="vm:WikiBrowserViewModel">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <!-- Tab Title Display Mode -->
                            <TextBlock Text="{Binding TabTitle}"
                                       VerticalAlignment="Center"
                                       IsVisible="{Binding !IsEditingTabTitle}"
                                       DoubleTapped="TabTitle_DoubleTapped"/>

                            <!-- Tab Title Edit Mode -->
                            <TextBox Text="{Binding TabTitle}"
                                     IsVisible="{Binding IsEditingTabTitle}"
                                     MinWidth="80"
                                     BorderThickness="1"
                                     Padding="4,2"
                                     VerticalAlignment="Center"
                                     Name="TabTitleTextBox"
                                     LostFocus="TabTitleEdit_LostFocus"
                                     KeyDown="TabTitleEdit_KeyDown"/>

                            <Button Content="Ã—"
                                    Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).CloseTabCommand}"
                                    CommandParameter="{Binding}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="4,0"
                                    FontSize="16"
                                    ToolTip.Tip="Close tab"/>
                        </StackPanel>
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate x:DataType="vm:WikiBrowserViewModel">
                        <views:WikiBrowserView DataContext="{Binding}"/>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>

            <!-- New Tab Button -->
            <Button Grid.Column="1"
                    Content="+"
                    Command="{Binding OpenNewWikiTabCommand}"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="12,6"
                    FontSize="18"
                    FontWeight="Bold"
                    ToolTip.Tip="New wiki tab"
                    VerticalAlignment="Top"
                    Margin="4,2,4,0"/>
        </Grid>
    </DockPanel>

</Window>
